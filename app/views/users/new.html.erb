<h2 class="text-2xl mb-4 text-slate-500"><%= t(".title") %></h2>
<div class="border border-gray-300 rounded-2xl p-6">
  <div id="clearance" class="sign-up">

    <%= form_for @user do |form| %>
      <%= render partial: '/users/form', object: form %>

      <div class="submit-field mb-8">
        <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
      </div>

      <div class="other-links">
        <%= link_to t(".sign_in"), sign_in_path %>
      </div>
    <% end %>
  </div>
</div>