<div class="mt-16">
  <h2 class="text-2xl font-bold mb-4 text-slate-600">
    <%= link_to post.title, post %>
  </h2>
  <div class="content font-serif text-slate-600">
    <%= markdown(post.content) %>
  </div>
  <div class="flex flex-row">
    <span class="ml-auto text-slate-500 text-sm">
      ⌘ <%= link_to post.created_at.strftime("%w %B"), post %>
    </span>
  </div>
</div>